<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_obras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_ingreso"
    tools:context="com.example.app_inventario_arquitectura.go_obras_Fragment">

    <!-- Toolbar en la parte superior con tÃ­tulo y flecha de retroceso
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@color/fondo"
        app:navigationIcon="@drawable/ic_back"
        app:title="Obras"
        app:titleTextColor="@color/colortexto"
