<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/crearObras"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondo_ingreso"
    tools:context="com.example.app_inventario_arquitectura.go_editar_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/editar_obras"
            style="@style/estilo_letra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Editar " />

        <!-- Codigo de Obra -->
        <TextView
            style="@style/estilo_letra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Codigo de la Obra"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCodigoObra"
            style="@style/estilo_letra_cuadro"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/cuadro_recbir_texto"
            android:hint="Ingrese el Codigo de la Obra"
            android:inputType="number"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Campo de Nombre de Obra -->
        <TextView
            style="@style/estilo_letra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nombre de la Obra"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etNombreObra"
            style="@style/estilo_letra_cuadro"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/cuadro_recbir_texto"
            android:hint="Ingrese el nombre de la Obra"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Campo de Cliente de Obra -->
        <TextView
            style="@style/estilo_letra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cliente de la Obra"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etClienteObra"
            style="@style/estilo_letra_cuadro"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/cuadro_recbir_texto"
            android:hint="Ingrese el Cliente de la Obra"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Campo de Departamento De Obra -->
        <TextView
            style="@style/estilo_letra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ubicación del Departamento de la Obra "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etDepartamentoObra"
            style="@style/estilo_letra_cuadro"
            android:layout_width="237dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/cuadro_recbir_texto"
            android:hint="Departamento"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Campo Ciudad de la Obra -->
        <TextView
            style="@style/estilo_letra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ubicación de la Ciudad de la Obra "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCiudad"
            style="@style/estilo_letra_cuadro"
            android:layout_width="237dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/cuadro_recbir_texto"
            android:hint="Ciudad"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <!-- Contenedor para los dos botones superiores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnBuscar"
                    style="@style/estilo_boton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:onClick="buscar"
                    android:text="@string/btnBuscar" />

                <Button
                    android:id="@+id/btnGuardar"
                    style="@style/estilo_boton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:onClick="guardar"
                    android:text="@string/btnGuardar" />
            </LinearLayout>

            <!-- Botón inferior centrado -->
            <Button
                android:id="@+id/btnCancelarEditar_go"
                style="@style/estilo_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:onClick="cancelar"
                android:text="@string/btn_cancelar" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>