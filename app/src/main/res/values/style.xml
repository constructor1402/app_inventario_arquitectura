
<resources>
    <!-- estilo de de botones -->
    <style name="estilo_boton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#1E2633</item>
        <item name="android:textColor">#B7BC91</item>
        <item name="android:fontFamily">@font/nerkooneregular</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- estilo de letra para titulos  -->
    <style name="estilo_letra" parent="">
        <item name="android:fontFamily">@font/nerkooneregular</item>
        <item name="android:textColor">#9DA68C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="estilo_letra_cuadro">
        <item name="android:textColor">#000000
        </item> <!-- Color del texto con suficiente contraste Negro o el color con más contraste -->
        <item name="android:textSize">16sp</item> <!-- Tamaño del texto -->
        <item name="android:hint">#808080
        </item>  <!-- hint también tenga buen contraste  Gris claro para el hint -->
        <item name="android:paddingVertical">12dp
        </item>        <!-- Establecer padding (opcional) -->
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:fontFamily">@font/nerkooneregular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tipo_letra" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/nerkooneregular</item>
        <item name="android:textColor">#9DA68C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Apariencia de texto personalizada para el título del Toolbar -->
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/nerkooneregular</item>
        <item name="android:textColor">@color/colortexto</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>
